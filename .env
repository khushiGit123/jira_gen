# Mock external services for testing (true/false)
# MOCK_JIRA=false
# MOCK_OPENAI=false

# =============================================================================
# Web Interface Configuration
# =============================================================================
# Port for the Streamlit web interface (default: 5000)
# WEB_PORT=5000

# Host for the web interface (default: 0.0.0.0)
# WEB_HOST=0.0.0.0

# Enable/disable the web interface authentication (if implemented)
# WEB_AUTH_ENABLED=false

# =============================================================================
# Security Configuration
# =============================================================================
# Optional: Encryption key for sensitive data storage
# ENCRYPTION_KEY=your-encryption-key-here

# Optional: JWT secret for web interface sessions
# JWT_SECRET=your-jwt-secret-here

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum number of concurrent agent executions
# MAX_CONCURRENT_AGENTS=3

# Request timeout in seconds
# REQUEST_TIMEOUT=60

# Retry configuration
# MAX_RETRIES=3
# RETRY_DELAY=5

# =============================================================================
# Integration Configuration
# =============================================================================
# Optional: Slack webhook URL for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Optional: Email configuration for notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=notifications@company.com

# =============================================================================
# Database Configuration (if using database storage)
# =============================================================================
# Optional: Database URL for storing analysis results
# DATABASE_URL=postgresql://user:password@localhost:5432/business_analysis

# Optional: Redis URL for caching
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Cloud Storage Configuration (if using cloud storage)
# =============================================================================
# Optional: AWS S3 configuration for storing documents
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_REGION=us-east-1

# Optional: Azure Blob Storage configuration
# AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
# AZURE_CONTAINER_NAME=your-container-name

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Optional: Application monitoring
# SENTRY_DSN=https://your-sentry-dsn-here

# Optional: Metrics collection
# ENABLE_METRICS=false
# METRICS_PORT=9090

# =============================================================================
# API Configuration (if exposing REST API)
# =============================================================================
# API host and port
# API_HOST=0.0.0.0
# API_PORT=8000

# API authentication
# API_KEY=your-api-key-here

# Rate limiting
# RATE_LIMIT_PER_MINUTE=60

